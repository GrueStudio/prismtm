{
  "$defs": {
    "Bug": {
      "properties": {
        "id": {
          "description": "Unique identifier for the bug",
          "title": "Id",
          "type": "string"
        },
        "title": {
          "description": "Title of the bug",
          "title": "Title",
          "type": "string"
        },
        "version": {
          "description": "Version of the software when the bug was found",
          "title": "Version",
          "type": "string"
        },
        "description": {
          "description": "Detailed description of the bug",
          "title": "Description",
          "type": "string"
        },
        "status": {
          "$ref": "#/$defs/BugStatus",
          "description": "Status of the bug"
        },
        "priority": {
          "description": "Priority of the bug",
          "title": "Priority",
          "type": "string"
        },
        "opened_at": {
          "description": "Date and time when the bug was opened",
          "format": "date-time",
          "title": "Opened At",
          "type": "string"
        },
        "reproduced_at": {
          "anyOf": [
            {
              "format": "date-time",
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Date and time when the bug was reproduced",
          "title": "Reproduced At"
        },
        "reproduction_steps": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Steps to reproduce the bug",
          "title": "Reproduction Steps"
        },
        "found_at": {
          "anyOf": [
            {
              "format": "date-time",
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Date and time when the bug was found",
          "title": "Found At"
        },
        "reason": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Reason for the bug",
          "title": "Reason"
        },
        "fixed_at": {
          "anyOf": [
            {
              "format": "date-time",
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Date and time when the bug was closed",
          "title": "Fixed At"
        },
        "fix_description": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Description of the fix",
          "title": "Fix Description"
        },
        "version_fixed": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "description": "Version of the software when the bug was fixed",
          "title": "Version Fixed"
        },
        "tags": {
          "description": "List of applicable tags",
          "items": {
            "type": "string"
          },
          "title": "Tags",
          "type": "array"
        }
      },
      "required": [
        "id",
        "title",
        "version",
        "description",
        "status",
        "priority",
        "opened_at"
      ],
      "title": "Bug",
      "type": "object"
    },
    "BugStatus": {
      "enum": [
        "open",
        "reproduced",
        "found",
        "fixed",
        "closed"
      ],
      "title": "BugStatus",
      "type": "string"
    }
  },
  "description": "Tracks all bugs across the project.",
  "properties": {
    "tags": {
      "description": "List of used tags",
      "items": {
        "type": "string"
      },
      "title": "Tags",
      "type": "array"
    },
    "bugs": {
      "additionalProperties": {
        "items": {
          "$ref": "#/$defs/Bug"
        },
        "type": "array"
      },
      "description": "A map of bugs (value) to their originating project (key)",
      "title": "Bugs",
      "type": "object"
    }
  },
  "title": "ProjectBugList",
  "type": "object",
  "$schema": "https://json-schema.org/draft/2020-12/schema"
}